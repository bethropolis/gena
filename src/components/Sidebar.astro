---
import { sidebarStructure } from '../content.js'
---

<div class="sidebar p-8 w-full h-full overflow-y-auto">
  <ul class="space-y-2">
    {sidebarStructure.map((item) => (
      <>
        <li>
          <h5 
          class="mb-3 text-sm font-semibold text-slate-900 dark:text-slate-200"
          >{item.label}</h5>

        </li>
        {item.children && (
          <ul class="space-y-1">
            {item.children.map((child) => (
              <li class="">
                <a
                  href={child.path}
                  class="block py-1 pl-4 text-sm hover:text-purple-500 border-l-2 border-gray-200 hover:border-purple-400"
                  class={child.label === 'Getting Started' ? 'text-blue-500' : ''}
                >
                  {child.label}
                </a>
              </li>
            ))}
          </ul>
        )}
      </>
    ))}
  </ul>
</div>